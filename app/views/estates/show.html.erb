<main class="main_wrapper show_wrapper">
  <%if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <div class="show_estate">
    <p>
      <strong>物件名:</strong>
      <%= @estate.name %>
    </p>

    <p>
      <strong>賃料:</strong>
      <%= @estate.rent.to_s(:delimited)+%!円! %>
    </p>

    <p>
      <strong>住所:</strong>
      <%= @estate.place %>
    </p>

    <p>
      <strong>築年数:</strong>
      <%= @estate.age.to_s+%!年! %>
    </p>

    <p>
      <strong>備考:</strong>
      <%= @estate.other %>
    </p>
  </div>

  <hr>

  <% if @stations.any? %>
    <% @stations.each do |station| %>

      <% @station_count = @station_count + 1 %>
      <h2><%= %!最寄り駅!+@station_count.to_s %></h2>

      <div class="show_estate">
        <p>
          <strong>路線名:</strong>
          <%= station.line %>
        </p>

        <p>
          <strong>駅名:</strong>
          <%= station.station_name %>
        </p>

        <p>
          <strong>徒歩分数:</strong>
          <%= station.time.to_s+%!分! %>
        </p>
      </div>
    <% end %>
  <% end %>

  <%= link_to %!編集!, edit_estate_path(@estate) %> |
  <%= link_to %!戻る!, estates_path %>
</main>
